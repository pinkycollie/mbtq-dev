{
  "name": "@mbtq/accessibility-dev-platform",
  "version": "1.0.0",
  "description": "A full accessibility-focused dev platform with all cores, features, tools, templates, and workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "accessibility:check": "node dist/cli/accessibility-checker.js",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run accessibility:check"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "aria",
    "devops",
    "development-platform",
    "screen-reader",
    "keyboard-navigation",
    "color-contrast"
  ],
  "author": "MBTQ Dev",
  "license": "MIT",
  "dependencies": {
    "axe-core": "^4.8.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "wcag-contrast": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
