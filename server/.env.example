# Server Environment Variables Example
# Copy this file to .env and update with your values

# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://pinkycollie.github.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SESSION_SECRET=your-secure-session-secret-change-this

# Supabase Service Role Key (NEVER expose in frontend)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: Database connection (if using direct database)
DATABASE_URL=postgresql://user:password@host:5432/database

# Optional: Redis connection (for caching/rate limiting)
REDIS_URL=redis://localhost:6379

# Optional: Monitoring
SENTRY_DSN=your-backend-sentry-dsn

# Logging
LOG_LEVEL=info
